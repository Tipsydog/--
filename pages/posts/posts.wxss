swiper{
  height: 600rpx;
  width: 100%;  
}

swiper swiper-item{
  display: flex;
  justify-content: center; 
  align-items: center;
}

swpier image{
  width: 100%;
  height: 600rpx;
}

.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20px;
  margin-bottom: 40px;
  padding-bottom: 20rpx;
  background-color: #ffffff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
}

.post-author-date{
  margin: 10rpx 0 10rpx 20rpx;
  display: flex;
  align-items: center;
}

.post-author-date image{
  height: 60rpx;
  width: 60rpx;
}

.post-author-date text{
  font-size: 20rpx;
  margin-left: 20rpx;
}

.post-title{
  font-size: 34rpx;
  font-weight: 600;
  margin-top: 10rpx;
  margin-left: 20rpx;
  color: #333;
}

.post-image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 5px;
}

.post-content{
  font-size: 28rpx;
  color: #666;
  letter-spacing: 2rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}

.post-like{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  margin-left: 20rpx;
}

.post-like image{
  height: 32rpx;
  width: 32rpx;
  margin-right: 16rpx;
}

.post-like text{
  margin-right: 40rpx;
}