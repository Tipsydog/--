.container {
  display: flex;
  flex-direction: column;
}

.head-image {

  width: 100%;
  height: 460rpx;
}

.author-date {
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
  align-items: center;
  font-size: 20rpx;
  font-weight: 300;
  font-family: MicroSoft Yahei;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
}

.author {
  font-size: 30rpx;
  margin-left: 20rpx;
  color: #666;
}

.const-date {
  margin-left: 40rpx;
}

.date {
  font-size: 30rpx;
  margin-left: 40rpx;
}

.tilte {
  margin-top: 20rpx;
  margin-left: 30rpx;
  font-size: 45rpx;
  color: #333;
}

.cut {
  position: relative;
  height: 100rpx;
  width: 100%;
  align-items: center;
}

.cut image {
  position: absolute;
  height: 96rpx;
  width: 96rpx;
  margin-top: -36rpx;
}

.cut .cut-img1{
    right: 50rpx;
}
.cut .cut-img2{
    right: 180rpx;
}

.cut-line {
  position: absolute;
  left: 5%;
  height: 2rpx;
  width: 90%;
  margin: 0 auto;
  background-color: #666;
  margin-top: 48rpx;
  margin-bottom: 30rpx;
}

.content{
  margin-top: 20rpx;
  margin-left: 30rpx;
  font-size: 35rpx;
  color: #333;
}
